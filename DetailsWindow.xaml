<Window x:Class="Doujin_Interface.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doujin_Interface"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="450" Width="478.165">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">

        <Image x:Name="cover" Margin="10,30,221,10"/>
        <TreeView x:Name="Tags" Margin="256,10,10,10" Background="#FF5F5F5F" Foreground="White"/>
        <Label x:Name="titel" Content="Label" HorizontalAlignment="Left" Height="25" Margin="10,0,0,0" VerticalAlignment="Top" Width="241" Foreground="White" FontWeight="Bold"/>


    </Grid>
</Window>
